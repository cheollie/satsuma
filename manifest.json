{
    "manifest_version": 2,
    "name": "satsuma",
    "description": "satsuma is a chrome extension that helps people get things done in a fun way :D",
    "version": "1.2",
    "icons": {
        "64": "./64.png"
    }, 

    "background": {
        "scripts": []
    },

    "browser_action": { 
    "default_popup": "popup.html",
    "default_title": "satsuma"
    },
    "permissions": [
        "tabs",
        "alarms", 
        "cookies", 
        "debugger", 
        "notifications", 
        "tts",

     	"webRequest",
   	    "activeTab",
        "http://*/*",
        "https://*/*"
    ]
}

